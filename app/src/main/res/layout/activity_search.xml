<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:id="@+id/head"
        android:background="@mipmap/bg_status_bar_head"
        android:paddingTop="@dimen/view_status_bar_height"
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_status_bar_head_height">
        <ImageView
            android:id="@+id/back"
            android:src="@mipmap/ic_white_back"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:padding="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>
        <EditText
            android:id="@+id/content"
            android:hint="输入要搜索的内容"
            android:textSize="14sp"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10"
            android:maxLines="1"
            android:background="@drawable/bg_gradient_radius_white"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/back"
            app:layout_constraintRight_toLeftOf="@+id/search"/>
        <TextView
            android:gravity="center"
            android:text="搜索"
            android:textColor="@color/app_white"
            android:textSize="14sp"
            android:id="@+id/search"
            android:paddingLeft="@dimen/dp_15"
            android:paddingRight="@dimen/dp_15"
            android:layout_width="wrap_content"
            android:layout_height="55dp"
            app:layout_constraintRight_toRightOf="parent"/>
    </android.support.constraint.ConstraintLayout>
    <LinearLayout
        app:layout_constraintTop_toBottomOf="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:scaleType="center"
            android:src="@mipmap/ic_msg_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>