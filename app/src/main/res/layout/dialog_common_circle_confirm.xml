<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="2dp"
    android:background="@drawable/bg_gradient_radius_white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/dialog_tittle"
            android:text="请输入交易密码"
            android:textSize="15sp"
            android:textColor="#333"
            android:layout_margin="15dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f2f2f2"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_marginTop="15dp"
            android:id="@+id/dialog_content"
            android:text="请输入交易密码确认操作"
            android:textSize="14sp"
            android:textColor="#333"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:gravity="center_vertical|left"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/dialog_cancel"
                android:text="取消"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/bg_gradient_radius_hoop_grey"
                android:layout_width="100dp"
                android:layout_height="30dp" />
            <TextView
                android:id="@+id/dialog_confirm"
                android:layout_marginLeft="20dp"
                android:text="确定"
                android:textSize="15sp"
                android:gravity="center"
                android:textColor="#ffffff"
                android:background="@drawable/bg_gradient_radius_hoop_primary"
                android:layout_width="100dp"
                android:layout_height="30dp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>