<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@mipmap/bg_status_bar_head"
    android:layout_height="@dimen/view_status_bar_head_height"
    android:paddingTop="@dimen/view_status_bar_height">

    <ImageView
        android:id="@+id/back"
        android:scaleType="center"
        android:background="?selectableItemBackground"
        android:src="@mipmap/ic_white_back"
        android:layout_width="55dp"
        android:layout_height="55dp" />

    <TextView
        android:id="@+id/tittle"
        tools:text="标题"
        android:textSize="@dimen/common_tittle_text_size"
        android:textColor="@color/app_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <ImageView
        android:id="@+id/right_img_tool"
        android:src="@mipmap/ic_white_search"
        android:scaleType="center"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:visibility="gone"
        android:background="?selectableItemBackground"
        app:layout_constraintRight_toRightOf="parent"/>
    <TextView
        android:id="@+id/right_text_tool"
        android:text="提交"
        android:textColor="@color/app_white"
        android:gravity="center"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:visibility="gone"
        android:background="?selectableItemBackground"
        app:layout_constraintRight_toRightOf="parent"/>

</android.support.constraint.ConstraintLayout>