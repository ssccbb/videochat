<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:background="@mipmap/bg_charge_head"
            android:layout_width="match_parent"
            android:layout_height="167dp"
            android:orientation="vertical"
            android:paddingTop="@dimen/view_status_bar_height">

            <ImageView
                android:id="@+id/back"
                android:scaleType="center"
                android:background="?selectableItemBackground"
                android:src="@mipmap/ic_white_back"
                android:layout_width="55dp"
                android:layout_height="55dp" />
            <TextView
                android:id="@+id/diamond"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/app_white"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/dp_20"
                android:layout_marginBottom="20dp"
                android:text="账户余额：0"
                android:drawablePadding="5dp"
                android:drawableRight="@mipmap/ic_account_left"
                android:layout_width="wrap_content"
                android:layout_height="match_parent" />
        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/question"
            android:text="充值遇到问题？点此解决"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginBottom="10dp"
            android:textColor="@color/app_shadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</ScrollView>