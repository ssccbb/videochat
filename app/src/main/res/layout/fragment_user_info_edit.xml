<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include
        layout="@layout/view_action_bar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/item_avatar"
                android:foreground="?selectableItemBackground"
                android:background="@color/app_white"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="头像"
                    android:textColor="@color/app_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <com.feiyu.videochat.views.CircleImageView
                    android:id="@+id/avatar"
                    android:src="@drawable/timg1"
                    android:layout_width="60dp"
                    android:layout_height="60dp" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_id"
                android:foreground="?selectableItemBackground"
                android:background="@color/app_white"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="ID号"
                    android:textColor="@color/app_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/id"
                    android:text="1234567"
                    android:textColor="@color/app_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_nickname"
                android:foreground="?selectableItemBackground"
                android:background="@color/app_white"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="昵称"
                    android:textColor="@color/app_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/nickname"
                    android:text="Madonna"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/app_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_15" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_age"
                android:foreground="?selectableItemBackground"
                android:background="@color/app_white"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="年龄"
                    android:textColor="@color/app_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/age"
                    android:text="28"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/app_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_15" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_sex"
                android:foreground="?selectableItemBackground"
                android:background="@color/app_white"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="性别"
                    android:textColor="@color/app_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/sex"
                    android:text="男"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/app_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_15" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_motion"
                android:foreground="?selectableItemBackground"
                android:background="@color/app_white"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="情感状况"
                    android:textColor="@color/app_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/motion"
                    android:text="单身"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/app_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:scaleType="fitCenter"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/dp_15" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/item_sign"
                android:foreground="?selectableItemBackground"
                android:background="@color/app_white"
                android:layout_marginTop="1dp"
                android:gravity="center_vertical"
                android:padding="@dimen/dp_15"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:text="个性签名"
                        android:textColor="@color/app_black"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content" />
                    <ImageView
                        android:scaleType="fitCenter"
                        android:src="@mipmap/ic_arrow_right"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/dp_15" />
                </LinearLayout>
                <TextView
                    android:id="@+id/desc"
                    android:text="Madonna"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginRight="@dimen/dp_10"
                    android:textColor="@color/app_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>