<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.qiiiqjk.kkanzh.views.SquareLayoutView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/app_pink">
                <ImageView
                    android:id="@+id/cover"
                    android:background="@mipmap/ic_default_placeholder"
                    android:scaleType="centerCrop"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <ImageView
                    android:id="@+id/back"
                    android:scaleType="center"
                    android:src="@mipmap/ic_white_back"
                    android:layout_marginTop="@dimen/view_status_bar_height"
                    android:layout_width="55dp"
                    android:layout_height="55dp" />
                <ImageView
                    android:id="@+id/status"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_host_status_busy"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp" />
                <ImageView
                    android:id="@+id/auth"
                    android:visibility="gone"
                    android:src="@mipmap/ic_auth"
                    android:layout_margin="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="150dp"
                    android:layout_height="20dp" />
            </com.qiiiqjk.kkanzh.views.SquareLayoutView>

            <LinearLayout
                android:background="@color/app_white"
                android:orientation="horizontal"
                android:paddingTop="@dimen/dp_15"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="5dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/nickname"
                    android:text="微聊用户"
                    android:textColor="@color/app_black"
                    android:textSize="@dimen/common_navigation_text_size"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/price"
                    tools:text="0"
                    android:textSize="13sp"
                    android:textColor="@color/app_yellowdark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="0.5dp"
                    android:src="@mipmap/ic_diamond"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />
                <TextView
                    android:textSize="12sp"
                    android:textColor="@color/app_yellowdark"
                    android:text="/分钟"
                    android:layout_marginRight="3dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <RelativeLayout
                android:background="@color/app_white"
                android:paddingLeft="@dimen/dp_15"
                android:paddingRight="@dimen/dp_15"
                android:paddingBottom="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/num"
                    android:textSize="12sp"
                    android:text="微聊ID:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/info"
                    android:text=""
                    android:textSize="12sp"
                    android:layout_marginTop="2dp"
                    android:layout_below="@+id/num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <ImageView
                    android:id="@+id/follow"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/ic_host_follow"
                    android:layout_width="70dp"
                    android:layout_height="35dp" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/item_video"
                android:layout_marginTop="1dp"
                android:padding="@dimen/dp_15"
                android:background="@color/app_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="私拍视频"
                    android:textSize="14sp"
                    android:textColor="@color/app_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/all_video"
                    android:text="全部视频"
                    android:textSize="14sp"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/app_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="1dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp" />
                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/all_video"
                    android:id="@+id/video_list"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/item_pic"
                android:layout_marginTop="1dp"
                android:padding="@dimen/dp_15"
                android:background="@color/app_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="私房美照"
                    android:textSize="14sp"
                    android:textColor="@color/app_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/all_pic"
                    android:text="全部美照"
                    android:textSize="14sp"
                    android:layout_marginRight="@dimen/dp_20"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/app_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_marginTop="1dp"
                    android:layout_alignParentRight="true"
                    android:src="@mipmap/ic_arrow_right"
                    android:layout_width="wrap_content"
                    android:layout_height="16dp" />
                <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_below="@+id/all_pic"
                    android:id="@+id/pic_list"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"/>
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:padding="@dimen/dp_15"
                android:background="@color/app_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="经常上线时间"
                    android:textSize="14sp"
                    android:textColor="@color/app_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/online_time"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/app_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:padding="@dimen/dp_15"
                android:background="@color/app_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="接听率"
                    android:textSize="14sp"
                    android:textColor="@color/app_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/line_agree"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/app_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:padding="@dimen/dp_15"
                android:background="@color/app_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="本月通话时长"
                    android:textSize="14sp"
                    android:textColor="@color/app_black"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/line_time"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/app_shadow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:orientation="vertical"
                android:padding="@dimen/dp_15"
                android:background="@color/app_white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="个性签名"
                    android:textSize="14sp"
                    android:textColor="@color/app_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/sign"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text="这个人很懒，什么都没有留下"
                    android:textSize="14sp"
                    android:textColor="@color/app_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="1dp"
                android:padding="@dimen/dp_15"
                android:background="@color/app_white"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:text="个人标签"
                    android:textSize="14sp"
                    android:textColor="@color/app_black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/flag"
                    android:layout_marginTop="@dimen/dp_5"
                    android:text=""
                    android:textSize="14sp"
                    android:textColor="@color/app_shadow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/connect"
        android:gravity="center"
        android:background="@drawable/bg_host_connect"
        android:layout_width="match_parent"
        android:layout_height="48dp">
        <ImageView
            android:src="@mipmap/ic_video"
            android:layout_width="wrap_content"
            android:layout_height="16dp" />
        <TextView
            android:text="与TA视频"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            android:textColor="@color/app_white"
            android:textSize="@dimen/common_navigation_text_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</LinearLayout>