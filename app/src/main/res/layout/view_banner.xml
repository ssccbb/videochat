<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <com.feiyu.videochat.views.banner.AutoScrollViewPager
        android:id="@+id/auto_scroll_view_pager"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:clipChildren="false"/>
    <com.feiyu.videochat.views.banner.PagerIndicatorView
        android:visibility="visible"
        android:id="@+id/auto_scroll_pager_indicator"
        app:layout_constraintBottom_toBottomOf="@+id/auto_scroll_view_pager"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</android.support.constraint.ConstraintLayout>